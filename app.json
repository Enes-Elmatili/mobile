{
  "expo": {
    "name": "FIXED",
    "slug": "fixed-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic", 
    "scheme": "fixed",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000" 
    },
    "ios": {
      "supportsTablet": false, 
      "bundleIdentifier": "com.fixed.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "FIXED a besoin de votre position pour trouver les prestataires les plus proches.",
        "NSLocationAlwaysUsageDescription": "FIXED utilise votre position pour suivre l'arrivée de votre prestataire en temps réel."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundColor": "#000000"
      },
      "package": "com.fixed.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE"
      ]
    },
    "plugins": [
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.fixed.app",
          "enableGooglePay": true
        }
      ],
      "expo-secure-store",
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Autoriser FIXED à utiliser votre position."
        }
      ]
    ],
    "extra": {
      "apiUrl": "YOUR_API_URL_HERE",
      "socketUrl": "YOUR_SOCKET_URL_HERE",
      "eas": {
        "projectId": "d6938f3f-e8b0-4b3f-9ddd-d781ef02754a"
      }
    }
  }
}
